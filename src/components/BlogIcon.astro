---
import {
  FileCode2,
  Shield,
  SquareTerminal,
  SquareChevronRight,
  SearchCode,
  Scale,
} from "lucide-astro";

type Props = {
  postType: string;
};

const { postType } = Astro.props;
---

{postType === "programming" && <FileCode2 />}
{postType === "security" && <Shield />}
{postType === "hacking" && <SquareTerminal />}
{postType === "osint" && <SearchCode />}
{postType === "bugbounty" && <SearchCode />}
{postType === "tools" && <FileCode2 />}
{postType == "terms" && <Scale />}
{postType === "" && <SquareChevronRight />}
